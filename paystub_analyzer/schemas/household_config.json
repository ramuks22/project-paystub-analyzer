{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/project-paystub-analyzer/schemas/household_config.json",
    "title": "Household Configuration",
    "description": "Configuration for multi-filer household analysis.",
    "type": "object",
    "required": [
        "version",
        "household_id",
        "filers"
    ],
    "additionalProperties": false,
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^(0\\.3\\.\\d+|0\\.4\\.\\d+(-beta\\.\\d+)?)$"
        },
        "household_id": {
            "type": "string",
            "minLength": 1
        },
        "filing_year": {
            "type": "integer",
            "description": "Tax year for household analysis."
        },
        "state": {
            "type": "string",
            "pattern": "^[A-Z]{2}$",
            "description": "2-letter state code for standard deduction and state tax calculations."
        },
        "filing_status": {
            "type": "string",
            "enum": [
                "SINGLE",
                "MARRIED_JOINTLY",
                "MARRIED_SEPARATELY",
                "HEAD_OF_HOUSEHOLD",
                "WIDOWED"
            ],
            "description": "Tax filing status for the household."
        },
        "filers": {
            "type": "array",
            "minItems": 1,
            "maxItems": 2,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "role",
                    "sources"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-zA-Z0-9_-]+$"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "PRIMARY",
                            "SPOUSE"
                        ]
                    },
                    "name": {
                        "type": "string"
                    },
                    "sources": {
                        "type": "object",
                        "required": [
                            "paystubs_dir"
                        ],
                        "properties": {
                            "paystubs_dir": {
                                "type": "string"
                            },
                            "w2_files": {
                                "type": "array",
                                "minItems": 0,
                                "maxItems": 20,
                                "items": {
                                    "type": "string"
                                },
                                "description": "List of W-2 paths. Aggregated by 'w2_aggregation_mode'."
                            },
                            "w2_aggregation_mode": {
                                "type": "string",
                                "enum": [
                                    "SUM"
                                ],
                                "default": "SUM"
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "additionalProperties": false
            }
        }
    }
}
