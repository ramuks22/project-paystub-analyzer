{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Tax Filing Package Output (v0.3.0)",
    "type": "object",
    "required": [
        "schema_version",
        "household_summary",
        "metadata",
        "filers"
    ],
    "properties": {
        "schema_version": {
            "type": "string",
            "enum": [
                "0.3.0",
                "0.4.0"
            ]
        },
        "household_summary": {
            "type": "object",
            "required": [
                "total_gross_pay_cents",
                "total_fed_tax_cents",
                "ready_to_file"
            ],
            "properties": {
                "total_gross_pay_cents": {
                    "type": "integer"
                },
                "total_fed_tax_cents": {
                    "type": "integer"
                },
                "ready_to_file": {
                    "type": "boolean"
                }
            }
        },
        "metadata": {
            "type": "object",
            "properties": {
                "filing_year": {
                    "type": "integer"
                },
                "state": {
                    "type": "string"
                },
                "filing_status": {
                    "type": "string"
                }
            }
        },
        "filers": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "role",
                    "gross_pay_cents",
                    "fed_tax_cents",
                    "state_tax_by_state_cents",
                    "status",
                    "audit_flags",
                    "correction_trace",
                    "w2_aggregate",
                    "w2_sources",
                    "w2_source_count"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "gross_pay_cents": {
                        "type": "integer"
                    },
                    "fed_tax_cents": {
                        "type": "integer"
                    },
                    "state_tax_by_state_cents": {
                        "type": "object",
                        "patternProperties": {
                            "^[A-Z]{2}$": {
                                "type": "integer"
                            }
                        },
                        "additionalProperties": false
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "MATCH",
                            "REVIEW_NEEDED",
                            "MISMATCH",
                            "ERROR"
                        ]
                    },
                    "audit_flags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "correction_trace": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "corrected_field",
                                "reason",
                                "timestamp"
                            ],
                            "properties": {
                                "corrected_field": {
                                    "type": "string"
                                },
                                "original_value": {},
                                "corrected_value": {},
                                "reason": {
                                    "type": "string"
                                },
                                "timestamp": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "w2_aggregate": {
                        "type": "object",
                        "required": [
                            "box1_wages_cents",
                            "box2_fed_tax_cents"
                        ],
                        "properties": {
                            "box1_wages_cents": {
                                "type": "integer"
                            },
                            "box2_fed_tax_cents": {
                                "type": "integer"
                            },
                            "state_boxes": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "state",
                                        "wages_cents",
                                        "tax_cents"
                                    ],
                                    "properties": {
                                        "state": {
                                            "type": "string"
                                        },
                                        "wages_cents": {
                                            "type": "integer"
                                        },
                                        "tax_cents": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "w2_sources": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "filename",
                                "employer_ein",
                                "box1_wages_contribution_cents"
                            ],
                            "properties": {
                                "filename": {
                                    "type": "string"
                                },
                                "employer_ein": {
                                    "type": "string"
                                },
                                "box1_wages_contribution_cents": {
                                    "type": "integer"
                                }
                            }
                        }
                    },
                    "w2_source_count": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}
